	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:MemoryGame"
	mc:Ignorable="d"
	WindowState="Maximized"
	WindowStyle="None"
	Background="#FFF8F5"
